import streamlit as st

# ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ° ÑÑ‚Ñ€Ð°Ð½Ð¸Ñ†Ñ‹
st.set_page_config(page_title="Bank Health Check", page_icon="ðŸ¦")

st.title("ðŸ¦ Bank Stability Analyzer (Ireland)")
st.write("Professional scoring tool based on financial indicators.")

# Ð‘Ð¾ÐºÐ¾Ð²Ð°Ñ Ð¿Ð°Ð½ÐµÐ»ÑŒ Ð´Ð»Ñ Ð²Ð²Ð¾Ð´Ð° Ð´Ð°Ð½Ð½Ñ‹Ñ…
st.sidebar.header("Input Metrics")
st.sidebar.markdown("Enter data from the bank's official annual reports.")

cet1 = st.sidebar.number_input("CET1 Ratio (Capital), %", 0.0, 30.0, 15.0, help="Capital adequacy ratio")
npl = st.sidebar.number_input("NPL Ratio (Non-Performing Loans), %", 0.0, 20.0, 3.0, help="Percentage of bad loans")
cir = st.sidebar.number_input("Cost to Income Ratio, %", 0.0, 100.0, 50.0, help="Efficiency metric")
roe = st.sidebar.number_input("ROE (Return on Equity), %", -5.0, 30.0, 10.0, help="Profitability metric")

# ÐœÐ¾Ð´ÐµÐ»ÑŒ Ð¾Ñ†ÐµÐ½ÐºÐ¸
score = 0
if cet1 > 14: score += 30
if npl < 3: score += 30
if cir < 55: score += 20
if roe > 8: score += 20

# ÐžÑ‚Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ðµ Ñ€ÐµÐ·ÑƒÐ»ÑŒÑ‚Ð°Ñ‚Ð°
st.subheader("Stability Verdict")
col1, col2 = st.columns(2)

with col1:
    st.metric("Final Score", f"{score}/100")

with col2:
    if score >= 80:
        st.success("ðŸŸ¢ STABLE / LOW RISK")
    elif score >= 50:
        st.warning("ðŸŸ¡ MONITOR / MEDIUM RISK")
    else:
        st.error("ðŸ”´ VULNERABLE / HIGH RISK")

st.info("This tool provides a preliminary assessment based on standard European banking regulations.")
